rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isVerifiedUser() {
      return request.auth != null &&
        get(/databases/$(database)/documents/crewProfiles/$(request.auth.uid)).data.verification.verificationStatus == 'approved';
    }

    match /crewProfiles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    match /stays/{stayId} {
      allow read: if true;
      allow create, update, delete: if isVerifiedUser();
    }

    match /bookings/{bookingId} {
      allow read: if isVerifiedUser();
      allow create: if isVerifiedUser();
      allow update: if isVerifiedUser();
    }

    match /threads/{threadId} {
      allow create: if request.auth != null &&
        request.resource != null &&
        request.resource.data.participantIds is list &&
        request.auth.uid in request.resource.data.participantIds;
      allow read, update, delete: if request.auth != null &&
        resource != null &&
        request.auth.uid in resource.data.participantIds;
    }
  }
}
